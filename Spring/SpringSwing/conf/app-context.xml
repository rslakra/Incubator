<?xml version="1.0" encoding="UTF-8"?>
	<!--
		The heart of a Spring project is the bean definition file (or files).
		This is an XML file that can have any name.
	-->
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
          "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--
		The root element of the bean definition file is <beans>, which
		contains <bean> elements. The <bean> element provides several
		attributes, but for your first bean definition you'll use just three:
		id, class, and init-method. The id attribute defines the bean's name,
		which is used to retrieve it from Spring. The class attribute tells
		Spring which class to instantiate when it creates the bean. The
		init-method attribute defines a method name on the class that will be
		automatically invoked after Spring instantiates it. It is important to
		know that all beans are Singletons by default, unless you specify the
		singleton="false" attribute on the bean element. Spring automatically
		instantiates all Singletons when it is first initialized, unless the
		lazy-init="true" attribute is specified
	-->
	<bean id="mainFrame" class="com.examples.gui.MainFrame"
		init-method="init">
		<!-- Properties of main frame -->
		<property name="title" value="Spring using Swing" />
		<property name="contentPane">
			<ref bean="mainPanel" />
		</property>

	</bean>

	<bean id="mainPanel" class="com.examples.gui.BoxLayoutPanel"
		init-method="init">
		<property name="axis">
			<!--  "1" corresponds to BoxLayout.Y_AXIS -->
			<!--  Spring can access constants, but it's more complex -->
			<value>1</value>
		</property>
		<property name="panelComponents">
			<list>
				<ref bean="itemScrollPane" />
				<!-- add next item here-->
				<ref bean="buttonPanel" />
			</list>
		</property>
	</bean>

	<bean id="itemScrollPane" class="javax.swing.JScrollPane">
		<!-- add table here -->
		<constructor-arg>
			<ref bean="itemTable" />
		</constructor-arg>
	</bean>

	<bean id="buttonPanel" class="com.examples.gui.BoxLayoutPanel"
		init-method="init">
		<property name="axis">
			<!--  "0" corresponds to BoxLayout.X_AXIS -->
			<value>0</value>
		</property>
		<property name="panelComponents">
			<list>
				<!-- add new and delete buttons here -->
				<ref bean="deleteButton" />
				<ref bean="addNewButton" />
			</list>
		</property>
	</bean>

	<bean id="itemTable" class="javax.swing.JTable">
		<property name="model">
			<ref bean="itemTableModel" />
		</property>
	</bean>
	<bean id="itemTableModel" class="com.examples.gui.ItemTableModel">
		<property name="itemList">
			<ref bean="itemList" />
		</property>
	</bean>
	<bean id="itemList" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<value>Item 1</value>
				<value>Item 2</value>
				<value>Item 3</value>
			</list>
		</constructor-arg>
	</bean>

	<!-- new and delete button links -->
	<bean id="deleteButton" class="com.examples.gui.listeners.ButtonActionListener"
		init-method="init">
		<property name="actionListener">
			<ref bean="deleteButtonActionListener" />
		</property>
		<property name="text">
			<value>Delete</value>
		</property>
	</bean>
	<bean id="deleteButtonActionListener" class="com.examples.gui.listeners.DeleteButtonActionListener">
		<property name="list">
			<ref bean="itemList" />
		</property>
		<property name="table">
			<ref bean="itemTable" />
		</property>
	</bean>
	<bean id="addNewButton" class="com.examples.gui.listeners.ButtonActionListener"
		init-method="init">
		<property name="actionListener">
			<ref bean="addNewButtonActionListener" />
		</property>
		<property name="text">
			<value>Add New</value>
		</property>
	</bean>
	<bean id="addNewButtonActionListener" class="com.examples.gui.listeners.NewButtonActionListener">
		<property name="list">
			<ref bean="itemList" />
		</property>
		<property name="table">
			<ref bean="itemTable" />
		</property>
	</bean>	
	
</beans>